{
  "name": "officebooking-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:server": "npm --workspace=packages/server run dev",
    "dev:web": "npm --workspace=packages/web run dev",
    "dev:forecast": "uvicorn packages/forecast/app:app --reload --port 8000",

    "build:server": "npm --workspace=packages/server run build",
    "build:web": "npm --workspace=packages/web run build",
    "build": "npm run build:server && npm run build:web",

    "start:server": "npm --workspace=packages/server run start",
    "start:web": "npm --workspace=packages/web run start",
    "start:forecast": "uvicorn packages/forecast/app:app --port 8000",

    "start": "npm run start:web"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}
